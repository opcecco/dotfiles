unsetopt nomatch

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

export EDITOR=vim
export VISUAL=vim

alias 'mkdir'='mkdir -p'
alias 'c'='clear'
alias 'x'='exit'

alias 'ilikethistheme'='echo $RANDOM_THEME >> ~/liked_themes.txt'

function _venv_auto_activate() {
	if [[ -d "venv" ]]; then
		_VENV_PATH="$PWD/venv"
		if [[ "$VIRTUAL_ENV" != "$_VENV_PATH" ]]; then
			source "$_VENV_PATH/bin/activate"
		fi
	fi
}

